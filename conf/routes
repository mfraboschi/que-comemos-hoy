# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET    /                            controllers.Application.index()

GET    /crearUsuario				controllers.Application.crearUsuario()
POST   /addUsuario					controllers.Application.addUsuario()
GET    /login				 		controllers.Application.login()
GET    /listarUsuarios				controllers.Application.listarUsuarios()
POST   /entrar                      controllers.Application.entrar()

#GET    /begin                       controllers.Application.begin()

GET    /crearReceta					controllers.Application.crearReceta()
POST   /addReceta					controllers.Application.addReceta()
GET    /listarRecetas				controllers.Application.listarRecetas()
   

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset) 
